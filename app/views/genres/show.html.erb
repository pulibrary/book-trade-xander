<%= render 'shared/navbar' %>
<h1 class="title-container"><%= @genre.genre %> Books</h1>
<hr>
<div class="grid">
  <% Book.all.each do |book| %>
    <% if book.genre_id == @genre.id %>
      <div class="entry">
        <h2><%= book.title %></h2>
        <h3>By: <%= book.author %></h3>
        <p><%= book.description %></p>
        <div class="contact"><%= link_to 'Contact Trader', book %></div>
      </div>
    <% end %>
  <% end %>
</div>
<br>