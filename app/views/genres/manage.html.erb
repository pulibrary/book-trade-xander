<%= render 'shared/navbar' %>
<h1 class="title-container">Manage Genres</h1>
<hr>
<b>Add New Genre</b>
<%= render 'form', genre: Genre.new %>
<hr>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th colspan="3">Manage Existing Genres  <i>  *Deleting a genre will delete all books in that genre*</i></th>
        </tr>
      </thead>
      
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre %></td>
            <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
            <td><%= link_to 'Remove', genre, method: :delete, data: { confirm: 'Removing a genre removes all associated books. Are you sure you would like continue?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
