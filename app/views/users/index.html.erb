<%= render 'shared/navbar' %>
<h1 class="title-container">Manage Users</h1>
<hr>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th colspan="4">Manage Existing Users  <i>  *Removing a user will delete all their books*</i></th>
        </tr>
      </thead>
      
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Remove', "/users/#{user.id}}", method: :delete, data: { confirm: 'Removing a user removes all associated books. Are you sure you would like continue?' } %></td>
            <% if user.admin %>
              <td><%= link_to 'Remove Privileges', "/users/#{user.id}/update", method: :patch, data: { confirm: 'Are you sure you would like to take away admin status from this user?' } %></td>
            <% else %>
              <td><%= link_to 'Give ADMIN', "/users/#{user.id}/update", method: :patch, data: { confirm: 'Are you sure you would like to give admin status to this user?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


